{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
        "build_number": "{{env `BUILD_NUMBER`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "ami_name": "reflexfps-wine-{{user `build_number`}}",
            "instance_type": "m1.micro",
            "region": "eu-west-1",
            "source_ami": "ami-9440fbe3",
            "ssh_username": "admin"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo dpkg --add-architecture i386"
                "sudo apt-get update",
                "sudo apt-get -y install wine wine-32 lib32gcc1",
                "mkdir ~/steamcmd",
                "cd ~/steamcmd",
                "wget http://media.steampowered.com/installer/steamcmd_linux.tar.gz -O steamcmd.tar.gz",
                "tar xvzf steamcmd.tar.gz",
                "~/steamcmd/steamcmd.sh +@sSteamCmdForcePlatformType windows +login anonymous +force_install_dir ~/reflexfps +app_update 329740 +quit"
            ]
        }
    ]
}